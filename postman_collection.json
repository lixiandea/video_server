{
  "info": {
    "_postman_id": "video-server-api-collection",
    "name": "Video Server API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for video server microservices"
  },
  "item": [
    {
      "name": "User Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"TestPass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "register"]
            },
            "description": "Register a new user account"
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"TestPass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "login"]
            },
            "description": "Authenticate user and get JWT token"
          },
          "response": []
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "profile"]
            },
            "description": "Get authenticated user's profile"
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updateduser\",\n  \"password\": \"NewPassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "profile"]
            },
            "description": "Update authenticated user's profile"
          },
          "response": []
        },
        {
          "name": "Delete User Account",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/account",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "account"]
            },
            "description": "Delete authenticated user's account"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Video Service",
      "item": [
        {
          "name": "Upload Video",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "name",
                  "value": "My Video Title",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "upload"]
            },
            "description": "Upload a video file"
          },
          "response": []
        },
        {
          "name": "Get Video Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/{{videoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "{{videoId}}"]
            },
            "description": "Get information about a specific video"
          },
          "response": []
        },
        {
          "name": "Stream Video",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/{{videoId}}/stream",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "{{videoId}}", "stream"]
            },
            "description": "Stream video content"
          },
          "response": []
        },
        {
          "name": "Get User Videos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/videos?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "videos"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get list of videos owned by the authenticated user"
          },
          "response": []
        },
        {
          "name": "Delete Video",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/{{videoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "{{videoId}}"]
            },
            "description": "Delete a video (marks for deletion)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Comment Service",
      "item": [
        {
          "name": "Add Comment to Video",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a great video!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/{{videoId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "{{videoId}}", "comments"]
            },
            "description": "Add a comment to a specific video"
          },
          "response": []
        },
        {
          "name": "Get Comments for Video",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/videos/{{videoId}}/comments?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "videos", "{{videoId}}", "comments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get comments for a specific video"
          },
          "response": []
        },
        {
          "name": "Get Specific Comment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "comments", "{{commentId}}"]
            },
            "description": "Get a specific comment by ID"
          },
          "response": []
        },
        {
          "name": "Update Comment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated comment text\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "comments", "{{commentId}}"]
            },
            "description": "Update a specific comment (must be owner)"
          },
          "response": []
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "comments", "{{commentId}}"]
            },
            "description": "Delete a specific comment (must be owner)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "videoId",
      "value": "",
      "type": "string"
    },
    {
      "key": "commentId",
      "value": "",
      "type": "string"
    }
  ]
}